<html lang="sk">

  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link
      rel="stylesheet"
      href="/bower_components/semantic/dist/semantic.min.css"
    />
    <link
      rel="stylesheet"
      type="text/css"
      href="/bower_components/toastr/toastr.min.css"
    />
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <title>Chat | Gomegle</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <style>
      * { font-family: 'Poppins', sans-serif; }
    </style>
  </head>

  <body>
    <div class="gradient"></div>
    <div class="app">
      <div class="ui menu">
        <div class="item left floated">
          <div class="ui header">
            <a href="/"><img
                src="/images/gomegle.png"
                alt="Gomegle"
                class="sty"
              /></a>
          </div>
        </div>
        <div class="item right floated">
        </div>
      </div>
      <div class="one wide column"></div>
      <div class="fourteen wide column">
        <div class="ui vertical grid" id="msgs">
          <div class="sixteen column row"></div>
          <div class="sixteen column row"></div>
        </div>
      </div>
      <div class="row">
        <div class="five wide column"></div>
        <div class="six wide column">
          <div class="ui mini modal transition tada" id="confirm">
            <div class="header">
              End This Chat
            </div>
            <div class="content">
              <p>Are you sure you want to end this chat?</p>
            </div>
            <div class="actions">
              <div class="ui blue button" id="cancel">
                No
              </div>
              <div class="ui red right labeled icon button" id="close">
                Yes
                <i class="sign out icon"></i>
              </div>
            </div>
          </div>
        </div>
        <div class="five wide column"></div>
      </div>
      <div
        class="ui raised segment sixteen column row bottom"
        style="display: flex !important; width: 100%;"
      >
        <div
          class="ui action icon input"
          style="width: 100%; margin-left: -25px;"
        >
          <button class="ui red right labeled icon button" id="endbtn">
            <i class="ban icon"></i>
            <span class="txt">End</span>
          </button>
          <a href="/chat">
            <button class="ui blue icon button hide" id="newbtn">
              <span>New</span>
            </button>
          </a>
          <input
            type="text"
            placeholder="Please wait for another user..."
            id="message"
            disabled="true"
            tabindex="0"
            style="width: 20px !important;"
          />
          <button class="ui blue labeled icon button" id="sendbtn">
            <i class="fitted send icon"></i>
            <span class="txt">Send</span>
          </button>
          <a href="/">
            <button class="ui red icon button right-float hide" id="homebtn">
              <span>Home</span>
            </button>
          </a>
        </div>
      </div>
    </div>
  </body>
  <script src="/bower_components/Autolinker.js/dist/Autolinker.min.js"></script>
  <script src="/bower_components/jquery/dist/jquery.min.js"></script>
  <script src="/bower_components/socket.io-client/dist/socket.io.js"></script>
  <script src="/bower_components/toastr/toastr.min.js"></script>
  <script src="js/chat.js"></script>
  <script src="/bower_components/aes-js/index.js"></script>
  <script src="js/end.js"></script>

</html>